{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "atom": {
    "rewriteTsconfig": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}